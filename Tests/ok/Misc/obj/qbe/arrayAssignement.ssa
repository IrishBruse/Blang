data $arr = { l 0 0 0 0 }

export function l $main()
{
@start

    # Write: %i_0 -> %i_1
    %i_0 =l alloc8 8
    storel 0, %i_0
    # Read: %i_1
    # Write: %i_2 -> %i_3
    %i_2 =l loadl %i_1
    # Write: %i_3 -> %i_4
    %i_3 =l add %i_2, 1
    # Read: %arr_-1
    # Write: %arr_0 -> %arr_1
    %arr_0 =l add $arr, %i_3
    storel 2, %arr_0

    ret 0
}


